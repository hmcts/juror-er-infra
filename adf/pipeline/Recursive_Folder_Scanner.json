{
	"name": "Recursive_Folder_Scanner",
	"properties": {
		"activities": [
			{
				"name": "Initialize_Queue",
				"type": "SetVariable",
				"dependsOn": [],
				"policy": {
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"variableName": "Queue",
					"value": {
						"value": "@array(createObject('name', 'juror-ingestion', 'type', 'Path'))",
						"type": "Expression"
					}
				}
			},
			{
				"name": "Process_Folders",
				"type": "Until",
				"dependsOn": [],
				"userProperties": [],
				"typeProperties": {
					"expression": {
						"value": "@equals(length(variables('Queue'), 0))",
						"type": "Expression"
					},
					"activities": [
						{
							"name": "Process_Current_Item",
							"type": "Switch",
							"dependsOn": [],
							"userProperties": [],
							"typeProperties": {
								"on": {
									"value": "@item().type",
									"type": "Expression"
								},
								"cases": [
									{
										"value": "Path",
										"activities": [
											{
												"name": "Set_Current_Path",
												"type": "SetVariable",
												"dependsOn": [],
												"policy": {
													"secureOutput": false,
													"secureInput": false
												},
												"userProperties": [],
												"typeProperties": {
													"variableName": "CurrentFolderPath",
													"value": {
														"value": "@item().name",
														"type": "Expression"
													}
												}
											},
											{
												"name": "Get_Children",
												"type": "GetMetadata",
												"dependsOn": [],
												"policy": {
													"retry": 0,
													"retryIntervalInSeconds": 30,
													"secureOutput": false,
													"secureInput": false
												},
												"userProperties": [],
												"typeProperties": {
													"fieldList": [
														"childItems"
													],
													"storeSettings": {
														"type": "AzureBlobStorageReadSettings",
														"recursive": false,
														"enablePartitionDiscovery": false
													}
												}
											},
											{
												"name": "Add_Children_To_Queue",
												"type": "SetVariable",
												"dependsOn": [],
												"policy": {
													"secureOutput": false,
													"secureInput": false
												},
												"userProperties": [],
												"typeProperties": {
													"variableName": "_tmpQueue",
													"value": {
														"value": "@activity('Get_Children').output.childItems",
														"type": "Expression"
													}
												}
											}
										]
									},
									{
										"value": "File",
										"activities": [
											{
												"name": "Add_To_Files",
												"type": "AppendVariable",
												"dependsOn": [],
												"userProperties": [],
												"typeProperties": {
													"variableName": "FilePaths",
													"value": {
														"value": "@concat(variables('CurrentFolderPath'), '/', item().name)",
														"type": "Expression"
													}
												}
											}
										]
									}
								]
							}
						},
						{
							"name": "Remove_Processed_Item",
							"type": "SetVariable",
							"dependsOn": [],
							"policy": {
								"secureOutput": false,
								"secureInput": false
							},
							"userProperties": [],
							"typeProperties": {
								"variableName": "Queue",
								"value": {
									"value": "@skip(variables('Queue'), 1)",
									"type": "Expression"
								}
							}
						}
					]
				}
			}
		],
		"variables": {
			"Queue": {
				"type": "Array",
				"defaultValue": []
			},
			"CurrentFolderPath": {
				"type": "String"
			},
			"FilePaths": {
				"type": "Array",
				"defaultValue": []
			},
			"_tmpQueue": {
				"type": "Array",
				"defaultValue": []
			}
		},
		"annotations": []
	}
}