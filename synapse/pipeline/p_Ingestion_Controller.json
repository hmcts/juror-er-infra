{
	"name": "p_Ingestion_Controller",
	"properties": {
		"description": "Hight level pipeline \n- Load the data from BAIS\n- Triggers data transformation",
		"activities": [
			{
				"name": "Copy from bais",
				"type": "Copy",
				"dependsOn": [],
				"policy": {
					"timeout": "0:30:00",
					"retry": 1,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"source": {
						"type": "BinarySource",
						"storeSettings": {
							"type": "AzureFileStorageReadSettings",
							"recursive": true,
							"wildcardFolderPath": {
								"value": "@pipeline().parameters.folder",
								"type": "Expression"
							},
							"wildcardFileName": "*",
							"deleteFilesAfterCompletion": false
						},
						"formatSettings": {
							"type": "BinaryReadSettings"
						}
					},
					"sink": {
						"type": "BinarySink",
						"storeSettings": {
							"type": "AzureBlobFSWriteSettings"
						}
					},
					"enableStaging": false
				},
				"inputs": [
					{
						"referenceName": "DS_bais_binary",
						"type": "DatasetReference"
					}
				],
				"outputs": [
					{
						"referenceName": "DS_juror_eric_landing",
						"type": "DatasetReference",
						"parameters": {
							"container": "qz-test"
						}
					}
				]
			},
			{
				"name": "Execute ETL",
				"type": "ExecutePipeline",
				"dependsOn": [
					{
						"activity": "Copy from bais",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"policy": {
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"pipeline": {
						"referenceName": "p_er_juror_eric_etl",
						"type": "PipelineReference"
					},
					"waitOnCompletion": true
				}
			}
		],
		"parameters": {
			"folder": {
				"type": "string",
				"defaultValue": "BAIS/Sites/External-In-Legacy/Juror_ER"
			},
			"last_modified": {
				"type": "string"
			},
			"source_container": {
				"type": "string",
				"defaultValue": "juror-raw"
			},
			"year_filter": {
				"type": "string",
				"defaultValue": "2025"
			},
			"processing_container": {
				"type": "string",
				"defaultValue": "qz-test"
			},
			"debug_mode": {
				"type": "string",
				"defaultValue": "true"
			},
			"config_container": {
				"type": "string",
				"defaultValue": "juror-etl"
			},
			"eric_voters_tmp_container": {
				"type": "string",
				"defaultValue": "dl-juror-eric-voters-temp"
			}
		},
		"annotations": []
	}
}